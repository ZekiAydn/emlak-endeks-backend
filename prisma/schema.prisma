generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MediaType {
  USER_PHOTO
  CERTIFICATE
  REPORT_COVER
  MAP_IMAGE
  COMPS_SCREENSHOT
  CHARTS_SCREENSHOT
  OTHER
}

model User {
  id       String  @id @default(cuid())
  fullName String
  phone    String?
  email    String?
  about    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  media   Media[]  @relation("UserMedia")
  reports Report[]
}

model Report {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  // 1. sayfa
  clientFullName    String
  addressText       String
  parcelText        String
  reportDate        DateTime
  consultantOpinion String?

  // 3. sayfa (formdan)
  propertyDetails PropertyDetails?
  buildingDetails BuildingDetails?
  pricingAnalysis PricingAnalysis?

  // emsaller tablosu vs. (şimdilik serbest)
  comparablesJson Json?

  media Media[] @relation("ReportMedia")
}

model PropertyDetails {
  id       String @id @default(cuid())
  reportId String @unique
  report   Report @relation(fields: [reportId], references: [id])

  roomCount  Int?
  salonCount Int?
  bathCount  Int?
  grossArea  Float?
  netArea    Float?
  floor      Int?
  heating    String?
  facade     String?
  view       String?
}

model BuildingDetails {
  id       String @id @default(cuid())
  reportId String @unique
  report   Report @relation(fields: [reportId], references: [id])

  buildingAge    Int?
  buildingFloors Int?
  hasElevator    Boolean?
  hasParking     Boolean?
  isSite         Boolean?
  security       Boolean?
}

model PricingAnalysis {
  id       String @id @default(cuid())
  reportId String @unique
  report   Report @relation(fields: [reportId], references: [id])

  minPrice      Float?
  expectedPrice Float?
  maxPrice      Float?
  note          String?
}

model Media {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  type     MediaType
  mime     String
  filename String?

  // MVP: dosyayı DB’de tut (bytea)
  data Bytes

  // ilişki: user veya report
  userId String?
  user   User?   @relation("UserMedia", fields: [userId], references: [id])

  reportId String?
  report   Report? @relation("ReportMedia", fields: [reportId], references: [id])

  order Int @default(0)

  @@index([userId])
  @@index([reportId])
}
